<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bck"
    tools:context=".activities.TransferActivity">

    <TextView
        android:id="@+id/transferttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transferfrom"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="480dp"
    />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="480dp"
        />

    <Spinner
        android:id="@+id/selectdestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:spinnerMode="dialog"
        android:background="@null"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/transferttl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


        <ImageButton
            android:id="@+id/qrbtn"
            android:src="@drawable/qr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="14dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="160dp"
            android:background="@drawable/roundbtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/manualtransferbtn"
            android:src="@drawable/transfer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="160dp"
            android:padding="14dp"
            android:background="@drawable/roundbtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/transferbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/createbtns"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/manualtransferbtn"
            app:layout_constraintLeft_toLeftOf="@+id/manualtransferbtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>