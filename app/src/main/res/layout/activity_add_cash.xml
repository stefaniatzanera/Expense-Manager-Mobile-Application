<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bck"
    tools:context=".activities.AddCashActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/title_new_wallet"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lldata"
        android:layout_marginTop="160dp" />

    <LinearLayout
        android:id="@+id/lldata"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundbtn">

    <EditText
        android:id="@+id/nameofwallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/name_of_wallet"
        android:maxLength="10"
        android:textColor="@color/white"
        android:textColorHint="@color/backcolorintxtplc"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/amounttxtplc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/amount_of_card"
        android:textColorHint="@color/backcolorintxtplc"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:padding="6dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/nameofwallet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Spinner
        android:id="@+id/currenciesoptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amounttxtplc"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:spinnerMode="dialog"
        android:theme="@style/SpinnerDialogCurrencies"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amounttxtplc"
        tools:listitem="@layout/layout_for_currencies" />

    </LinearLayout>

    <Button
        android:id="@+id/createbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_card_btn"
        android:background="@drawable/createbtns"
        android:textColor="@color/white"
        android:padding="6dp"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/lldata"
        app:layout_constraintRight_toRightOf="@+id/lldata"
        />

</androidx.constraintlayout.widget.ConstraintLayout>