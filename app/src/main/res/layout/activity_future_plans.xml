<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_bck"
        android:orientation="vertical"
        tools:context=".activities.SettingsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:text="@string/futureplans"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/ios"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/iosdesc}"
                    app:buttonImage="@{@drawable/ios}"
                    app:buttonTitle="@{@string/ios}"
                    />

                <include
                    android:id="@+id/calculator"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/calculatordesc}"
                    app:buttonImage="@{@drawable/calculator}"
                    app:buttonTitle="@{@string/calculator}"
                    />

                <include
                    android:id="@+id/cexchange"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/cexchangedesc}"
                    app:buttonImage="@{@drawable/currencyexchange}"
                    app:buttonTitle="@{@string/cexchange}"
                    />

                <include
                    android:id="@+id/todolist"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/todolistdesc}"
                    app:buttonImage="@{@drawable/todolist}"
                    app:buttonTitle="@{@string/todolist}"
                    />

                <include
                    android:id="@+id/statistics"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/statisticsdesc}"
                    app:buttonImage="@{@drawable/statistics}"
                    app:buttonTitle="@{@string/statistics}"
                    />

                <include
                    android:id="@+id/history"
                    layout="@layout/layout_for_buttons_for_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonDescription="@{@string/historydesc}"
                    app:buttonImage="@{@drawable/history}"
                    app:buttonTitle="@{@string/history}"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>